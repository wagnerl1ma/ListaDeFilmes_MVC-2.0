@model ListaDeFilmes.App.ViewModels.FilmeViewModel

@{
    ViewData["Title"] = "Detalhes do Filme - " + Model.Nome;
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
    </button>
</div>

<form enctype="multipart/form-data" asp-action="DetailsModal">
    <div class="modal-body">
        <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 428px"/>
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Classificacao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Classificacao)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Ano)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ano)
            </dd>
            @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comentarios)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Comentarios)
                </dd>*@
            <dt>
                @Html.DisplayNameFor(model => model.Imagem)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Imagem)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Genero)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Genero.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Diretor)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Diretor.Id)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Produtora)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Produtora.Id)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </dl>

        <div class="modal-footer">
            <div class="col text-center">
                @*<input type="submit" value="Editar" class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id" />*@
                <input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal" />
            </div>
        </div>
    </div>
</form>



