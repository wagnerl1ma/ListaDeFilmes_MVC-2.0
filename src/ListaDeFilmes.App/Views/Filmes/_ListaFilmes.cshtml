@model IEnumerable<ListaDeFilmes.App.ViewModels.FilmeViewModel>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-transparent">
            <th>
                @*@Html.DisplayNameFor(model => model.Imagem)*@
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>

            @*<th>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </th>*@

            <th>
                @Html.DisplayNameFor(model => model.Classificacao)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>

            @*<th>
                    @Html.DisplayNameFor(model => model.Comentarios)
                </th>*@

            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>



            <th>
                @Html.DisplayNameFor(model => model.Diretor)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Produtora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/imagens/@item.Imagem" alt="@item.Imagem" style="width: 70px; height: 100px" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Genero.Nome)
                </td>

                @*<td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>*@

                <td>
                    @Html.DisplayFor(modelItem => item.Classificacao)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ano)
                </td>

                @*<td>
                            @Html.DisplayFor(modelItem => item.Comentarios)
                    </td>*@

                @*<td>
                            @Html.DisplayFor(modelItem => item.Imagem)
                    </td>*@

                <td>
                    @item.Valor.ToString("C2").Replace("$", "$ ")  @*//formato moeda pt-BR com duas casas decimais*@
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Diretor.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Produtora.Nome)
                </td>

                <td class="text-right">
                    <a class="btn btn-info" asp-controller="Filmes" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
                    <a class="btn btn-warning" asp-controller="Filmes" asp-action="Edit" asp-route-id="@item.Id" data-modal="">
                        <spam title="EditarFilme" class="fa fa-pencil-alt"></spam>
                    </a>
                    <a class="btn btn-danger" asp-controller="Filmes" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
        $(document).ready(function () {
            SetModal();
        });
</script>

<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>