@model ListaDeFilmes.App.ViewModels.GeneroViewModel

@{
    ViewData["Title"] = "Detalhes do Gênero - " + Model.Nome;
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
    </button>
</div>

<form asp-action="DetailsModal">
    <div class="modal-body">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>
    </div>

    <div class="modal-footer">
        <div class="col text-center">
            @*<input type="submit" value="Editar" class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id" />*@
            <input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal" />
        </div>
    </div>
</form>